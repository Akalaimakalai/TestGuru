<h2>Pass the <%= @result.test.title %> Test</h2>

<% @result.set_q_number %>

<b>
  Question â„–<%= @result.q_number %> out of <%= @result.test.questions.count %><br>
  <%= @result.current_question.body %>
</b>

<%= form_with url: result_path(@result), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @result.current_question.answers, :id,
                                  :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box  id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Next' %></p>
<% end %>
