<% if resource.present? && resource.errors.any? %>
  <div class="w-100"></div>
  <%= content_tag :div, data: { resource_id: resource.id }, id: "error_explanation" do %>
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)%>
    </h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
