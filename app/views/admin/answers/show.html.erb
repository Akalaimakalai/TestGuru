<div class="row justify-content-center mt-3 text-center">
  <div class="col col-md-4">
    <h2><%= t('.header') %></h2>

    <div class="mt-3 bg-warning text-center text-dark rounded border-dark">
      <%= @answer.question.body %>
    </div>
    
    <div class="mt-3">
      <b><%= t('.answer') %>:</b>
      <%= @answer.body %>
    </div>

    <div class="mt-3">
      <b><%= t('.correct') %>:</b>
      <%= @answer.correct %>
    </div>

    <div class="mt-3">
      <%= link_to t('.back'), admin_question_path(@answer.question) %>
    </div>
  </div>
</div>
