<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <div class="row text-left">
    <div class="col">
      <%= render "devise/shared/error_messages", resource: @answer %>
    </div>
  </div>

  <p>
    <%= form.label :body %>:<br>
    <%= form.text_area :body, id: :answer_body, rows: 5, cols: 30 %>
  </p>

  <p>
  <%= form.label :correct %>:
  <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p><%= form.submit %></p>
<% end %>
