<div class="row justify-content-center mt-3 text-center">
  <h2><%= t('.header', category: @question.test.category.title, title: @question.test.title) %></h2>
  <div class="w-100"></div>
  
  <div class="col col-md-4 text-left">
    <div class="mt-3 bg-warning text-center text-dark rounded border-dark">
      <p><%= @question.body %></p>
    </div>

    <%= link_to t('.new_answer'), new_admin_question_answer_path(@question) %>

    <ol>
      <%= render @question.answers %>
    </ol>
  </div>

  <div class="w-100"></div>

  <div class="col col-md-4">
    <%= link_to t('.edit'), edit_admin_question_path(@question) %> |
    <%= link_to t('.back'), admin_test_path(@question.test) %>
  </div>
</div>
