<div class="row justify-content-center mt-3 text-center">
  <h2><%= t('.header', category: @test.category.title, title: @test.title) %></h2>
  <div class="w-100"></div>

    <p>
      <%= link_to t('.new_question'), new_admin_test_question_path(@test) %> | 
      <%= link_to t('.edit'), edit_admin_test_path(@test) %>
    </p>
    <table class="table">
      <thead>
        <tr>
          <th scope="col"><%= t('.question') %></th>
          <th colspan="3" scope="col"></th>
        </tr>
      </thead>

      <%= render @questions %>
    </table>
    <br>

    <%= link_to t('.all_tests'), admin_tests_path %>
</div>
