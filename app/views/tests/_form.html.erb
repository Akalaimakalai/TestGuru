<%= form_with model: @test, local: true do |test| %>
  <%= render 'shared/errors', resource: @test %>
  <p>
    <%= test.label :category_id %>:
    <%= test.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>
  <p>
    <%= test.label :author_id %>:
    <%= test.collection_select :author_id, User.all, :id, :name, prompt: true %>
  </p>
  <p> 
    <%= test.label :title %>
    <%= test.text_field :title, id: :test_title %>
  </p>
  <p>
    <%= test.label :level %>
    <%= test.number_field :level, id: :test_level %>
  </p>
  <%= test.submit %>
<% end %>
<br>

<%= link_to 'All tests', tests_path %>
